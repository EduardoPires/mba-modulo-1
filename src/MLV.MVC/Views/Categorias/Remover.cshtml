@model MLV.Business.Models.Categoria

<h3>Tem certeza de deseja remover esta categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Criado Em
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CriadoEm)
        </dd>
        <dt class = "col-sm-2">
            Vendedor que criou
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsuarioCriacao)
        </dd>
    </dl>
    
    <form asp-action="Remover" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
