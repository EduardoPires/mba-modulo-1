@model MLV.Business.Models.Produto

<h3>Tem certeza de deseja remover este Produto?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-12">
            <img src="@Url.Content(Model.CaminhoImagem)" alt="Imagem do Produto" style="width: 50px; height: auto;" />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            Criado Em
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CriadoEm)
        </dd>
        <dt class = "col-sm-2">
            Vendedor que criou
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsuarioCriacao)
        </dd>
    </dl>
    
    <form asp-action="Remover" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>
