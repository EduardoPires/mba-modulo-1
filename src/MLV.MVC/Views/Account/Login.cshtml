@model MLV.MVC.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <div class="text-center col mb-4">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h1 class="h3 mb-3 fw-normal">Login</h1>
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" id="floatingInput" />
                        <label for="floatingInput">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="Senha" type="password" class="form-control" placeholder="Senha" id="floatingPassword" />
                        <label for="floatingPassword">Senha</label>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <br />
                    <button class="btn btn-primary w-100 py-2" type="submit">Entrar</button>
                </form>
            </div>
        </div>
    </div>
</section>
